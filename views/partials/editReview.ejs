<div class="modal fade" id="edit-modal-<%=review.ID%>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Edit review</h3>
      </div>
      <div class="modal-body">
        <form class="edit-review-form" id="edit-review-form-<%=review.ID%>">
          <div class="mb-2">
            <label for="edited_points-<%=review.ID%>">Points:</label>
            <input
              type="number"
              name="points"
              id="edited_points-<%=review.ID%>"
              class="form-control"
              value="<%=review.points%>"
              min="1"
              max="10"
              required
            />
          </div>
          <div class="mb-2">
            <label for="edited_review-<%=review.ID%>">Review:</label>
            <textarea name="review" id="edited_review-<%=review.ID%>" class="form-control"><%=review.review%></textarea>
          </div>
          <button type="submit" class="custom-green rounded-5 save_edit" id="save_edit-<%=review.ID%>">Save</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="custom-green rounded-5" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
